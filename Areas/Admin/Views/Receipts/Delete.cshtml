@model ADKT_WebProject.Models.Identities.Receipt

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Receipt</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Customer.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Customer.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Customer.PhoneNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.PhoneNumber)
        </dd>

    </dl>
    <table class="table">
        <thead class="thead-dark">
            <tr class="row">
                <th>ID</th>
                <th>Name</th>
                <th>Image</th>
                <th>Price</th>
                <th>Amount</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.receiptdetails)
            {
                <tr class="row">
                    <td>
                        @item.Watch.Id
                    </td>
                    <td>
                        @item.Watch.name
                    </td>
                    <td>
                        <img src="~/images/@item.Watch.Img_Path" style="width:80px;height:80px;" />
                    </td>
                    <td>
                        @item.Watch.price
                    </td>
                    <td>
                        @item.numOfItem
                    </td>
                    <td>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
